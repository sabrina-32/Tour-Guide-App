<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/userPorfile_VerifiedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Verified"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/userPorfile_UserImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:background="@drawable/icon_camera"
            android:paddingTop="5dp"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@+id/userProfile_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/userPorfile_TapaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap on camera to choose profile picture"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userPorfile_NameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/userProfile_DisplayNameEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Display Name" />

    </LinearLayout>

    <Button
        android:id="@+id/userPorfile_SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="Save"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/userPorfile_LogoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="Logout"
        android:textColor="#FFFFFF" />
    <Button
        android:id="@+id/userProfile_gotofeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="Go to Feed"
        android:textColor="#FFFFFF" />

</LinearLayout>